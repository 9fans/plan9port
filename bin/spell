#!/home/djc/plan9port/bin/rc

. 9.rc
spellflags=()
deroffargs=()
fflag=''
for(x){
	switch($x){
	case -[abcvx]
		spellflags=($spellflags $x)
	case -f
		fflag=$x
	case *
		if(~ $fflag -f)	{
			spellflags=($spellflags -f $x)
			fflag=''
		}
		if not		deroffargs=($deroffargs $x)
	}
}

deroff -w $deroffargs | sort -u | sprog $spellflags
