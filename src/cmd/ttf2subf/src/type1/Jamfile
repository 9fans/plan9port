# FreeType 2 src/type1 Jamfile (c) 2001 David Turner
#

SubDir  FT2_TOP $(FT2_SRC_DIR) type1 ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = t1afm t1driver t1objs t1load t1gload t1parse ;
  }
  else
  {
    _sources = type1 ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/type1 Jamfile
